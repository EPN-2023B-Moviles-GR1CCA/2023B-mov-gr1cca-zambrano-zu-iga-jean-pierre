<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crudgenero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrudGenero">

    <EditText
        android:id="@+id/input_nombre_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/input_descripcion_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_genero"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_genero" />

    <EditText
        android:id="@+id/input_cantidad_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_genero"
        app:layout_constraintTop_toBottomOf="@+id/input_descripcion_genero" />

    <EditText
        android:id="@+id/input_restriccion_edad_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Si / No"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_cantidad_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_cantidad_genero"
        app:layout_constraintTop_toBottomOf="@+id/input_cantidad_genero" />

    <EditText
        android:id="@+id/input_fecha_ingreso_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="yyyy-MM-dd"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_restriccion_edad_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_restriccion_edad_genero"
        app:layout_constraintTop_toBottomOf="@+id/input_restriccion_edad_genero" />

    <Button
        android:id="@+id/btn_agregar_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="agregar nuevo genero"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_ingreso_genero"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_ingreso_genero"
        app:layout_constraintTop_toBottomOf="@+id/input_fecha_ingreso_genero" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por favor ingrese los datos"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Nombre del genero"
        app:layout_constraintBottom_toTopOf="@+id/input_nombre_genero"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_genero" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Descripcion"
        app:layout_constraintBottom_toTopOf="@+id/input_descripcion_genero"
        app:layout_constraintEnd_toEndOf="@+id/input_descripcion_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_descripcion_genero" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Copias disponibles"
        app:layout_constraintBottom_toTopOf="@+id/input_cantidad_genero"
        app:layout_constraintEnd_toEndOf="@+id/input_cantidad_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_cantidad_genero" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Restriccion de edad"
        app:layout_constraintBottom_toTopOf="@+id/input_restriccion_edad_genero"
        app:layout_constraintEnd_toEndOf="@+id/input_restriccion_edad_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_restriccion_edad_genero" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Fecha de ingreso"
        app:layout_constraintBottom_toTopOf="@+id/input_fecha_ingreso_genero"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_ingreso_genero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_ingreso_genero" />
</androidx.constraintlayout.widget.ConstraintLayout>